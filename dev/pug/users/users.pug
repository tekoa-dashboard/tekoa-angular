                    li.tab-item
                        a(ng-click='changeTab($event)', data-tab='log-data') Log

                #personal-data
                    .form-group.container
                        .columns
                            label.form-label.column.col-12(for='input-example-1') Nome completo
                                input#input-example-1.form-input(type='text', placeholder='Ex: José da Lima Silva')
                        .columns
                            label.form-label.column.col-12(for='input-example-1') E-mail
                                input#input-example-1.form-input(type='text', placeholder='Ex: seu@email.com')

                        .columns
                            label.form-label.column.col-6(for='input-example-1') Usuário
                                input#input-example-1.form-input(type='text', placeholder='Ex: josesalima')

                            label.form-label.column.col-6(for='input-example-1') Senha
                                input#input-example-1.form-input(type='password', placeholder='')

                        .columns
                            label.form-label.column.col-12(for='input-example-3') Descrição
                                textarea#input-example-3.form-input(placeholder='Fale um pouco sobre o usuário...', rows='7')

                        .columns
                            label.form-label.column.col-12 Sexo
                                br
                                label.form-radio
                                    input(type='radio', name='gender')
                                    i.form-icon
                                    |  Masculino

                                label.form-radio
                                    input(type='radio', name='gender')
                                    i.form-icon
                                    |  Feminino

                                label.form-radio
                                    input(type='radio', name='gender', checked='')
                                    i.form-icon
                                    |  Outro

                        .columns
                            .column.col-12
                                label.form-switch
                                    input(type='checkbox')
                                    i.form-icon
                                    |  Liberado

                        .columns
                            .btn-group.btn-group-block.column.col-12
                                button.btn Cancelar
                                button.btn Salvar
                                button.btn Excluir

                #permission-data
                    .form-group.container
                        .columns.select
                            select.form-select.col-6
                                option(value='0' disabled='disabled' selected='selected') Nível administrativo
                                option(value='1') Operador
                                option(value='2') Editor
                                option(value='3') Gerente
                                option(value='9') Administrador

                        .columns
                            .column.col-12
                                label.form-switch
                                    input(type='checkbox')
                                    i.form-icon
                                    |  Criar registros

                        .columns
                            .column.col-12
                                label.form-switch
                                    input(type='checkbox')
                                    i.form-icon
                                    |  Deletar registros

                        .columns
                            .column.col-12
                                label.form-switch
                                    input(type='checkbox')
                                    i.form-icon
                                    |  Visualizar registros

                        .columns
                            .column.col-12
                                label.form-switch
                                    input(type='checkbox')
                                    i.form-icon
                                    |  Abrir registros individualmente

                        .columns
                            .column.col-12
                                label.form-switch
                                    input(type='checkbox')
                                    i.form-icon
                                    |  Salvar edições

                        .columns
                            .btn-group.btn-group-block.column.col-12
                                button.btn Cancelar
                                button.btn Salvar

                #log-data
